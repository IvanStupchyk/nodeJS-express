<h1>Card</h1>

<div id="card">
  {{#if courses.length}}
    <table>
      <thead>
      <tr>
        <th>Course name</th>
        <th>Count</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>

      {{#each courses}}
        <tr>
          <td>{{title}}</td>
          <td>{{count}}</td>
          <td>
            <button data-id="{{id}}" class="btn btn-small js-remove">Delete</button>
          </td>
        </tr>
      {{/each}}
      </tbody>
    </table>

    <p><strong>Price: </strong><span class="price">{{price}}</span></p>

    <form action="/orders" method="POST">
      <button type="submit" class="btn">Order</button>
    </form>
  {{else}}
    <p>Card is empty</p>
  {{/if}}
</div>
